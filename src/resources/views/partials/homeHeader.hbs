<script>
    document.addEventListener('DOMContentLoaded', function () {
        const signUpButton3 = document.getElementById('signUp3');
        const signInButton3 = document.getElementById('signIn3');
        const container3 = document.getElementById('container3');

        signUpButton3.addEventListener('click', () => {
            container3.classList.add("right-panel-active");
        });

        signInButton3.addEventListener('click', () => {
            container3.classList.remove("right-panel-active");
        });

        var loginModal = document.getElementById("loginModal");

        var loginModalContent = document.getElementById("loginModalContent");
        // Get the button that opens the modal
        var loginModalBtn = document.getElementById("loginModalBtn");

        // Get the <span> element that closes the modal


        // When the user clicks on the button, open the modal
        loginModalBtn.onclick = function () {
            loginModal.classList.add("showModalAnimation");


            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == loginModal) {

                    loginModal.classList.remove("showModalAnimation");
                }
            }
        }


    })
   
</script>